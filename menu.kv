<Menu>:
    canvas.before:
        Color:
            rgba: (0, 0, 0, .8)
        Rectangle:
            size: self.size
    Label:
        font_name: 'fonts/AbrilFatface-Regular.otf'
        font_size: '60dp'
        bold: True
        text: root.parent.title
        pos_hint: {"center_x": .5, "center_y": .75}

    Button:
        font_name: 'fonts/AbrilFatface-Regular.otf'
        font_size: '30dp'
        text: root.parent.button
        bold: True
        pos_hint: {"center_x": .5, "center_y": .3}
        size_hint: .2, .15
        on_release: root.parent.on_button_press()
        background_color: 1, .3, .4, .85
        background_normal: ''
